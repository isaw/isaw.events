<dl class="managedViewlets managedPortlet notify">
    <dt class="portletHeader">
        ViewletManager: <span tal:content="view/name">ViewletManager name</span>
        (<span tal:content="view/interface" />)
    </dt>
    <dd class="portletItem">
        <dl class="managedPortlet"
            tal:repeat="viewlet options/viewlets"
            tal:attributes="class python:'managedPortlet %s' % (viewlet['hidden'] and 'hiddenViewlet' or '')">
            <dt class="portletHeader">
                Viewlet: <span tal:content="viewlet/name">Viewlet name</span>
                (<span tal:content="viewlet/index">Index</span>)
                <a class="up"
                   tal:condition="viewlet/up_url | nothing"
                   tal:attributes="href viewlet/up_url">&uarr;</a>
                <a class="down"
                   tal:condition="viewlet/down_url | nothing"
                   tal:attributes="href viewlet/down_url">&darr;</a>
                <a class="hide"
                   tal:condition="viewlet/hide_url | nothing"
                   tal:attributes="href viewlet/hide_url">hide</a>
                <a class="show"
                   tal:condition="viewlet/show_url | nothing"
                   tal:attributes="href viewlet/show_url">show</a>
            </dt>
            <dd class="portletItem">
                <div tal:replace="structure viewlet/content"></div>
                <div class="visualClear"><!-- --></div>
            </dd>
        </dl>
    </dd>
</dl>